<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jpa="http://aries.apache.org/xmlns/jpa/v1.1.0" xmlns:tx="http://aries.apache.org/xmlns/transactions/v1.0.0"
           
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
       http://aries.apache.org/xmlns/jpa/v1.1.0 http://aries.apache.org/schemas/jpa/jpa_110.xsd">

    <bean id="basicSystemRepository" class="com.mycompany.test.jpa.internal.persistence.HibernateBasicSystemRepository">
        <tx:transaction method="*" value="Required"/>
        <jpa:context property="entityManager" unitname="jpa-repository"/>
    </bean>
    <service ref="basicSystemRepository" interface="com.mycompany.test.interfaces.HibenrateBasicSystemInterface" />

</blueprint>

